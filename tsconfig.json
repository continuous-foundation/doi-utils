{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "exclude": [
    "**/node_modules/**",
    "**/lib/**"
  ],
  "include": [
    "./src/index.ts"
  ]
}
